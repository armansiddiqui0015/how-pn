<%- include('./partials/header') %>
<% user.cart.forEach((product) => { %>
    <div class="w-full min-h-screen flex flex-col md:flex-row items-start px-5 md:px-20 py-10 md:py-20 gap-5 md:gap-10 dark:bg-gray-900 dark:text-white">
        <div class="w-full md:w-[30%] rounded-md overflow-hidden dark:bg-gray-800">
            <div class="w-full h-60 md:h-80 bg-yellow-500 dark:bg-yellow-600">
                <img class="w-full h-full object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
            </div>
            <div class="w-full flex justify-between px-5 py-4 dark:bg-gray-700">
                <h3 class="text-lg md:text-2xl dark:text-gray-100">Clinge Bag</h3>
                <div class="flex items-center gap-2">
                    <i class="w-7 h-7 bg-white dark:bg-gray-600 flex rounded-full items-center justify-center ri-add-line"></i>
                    <div class="px-2 py-1 rounded-md bg-white text-black dark:bg-gray-600 dark:text-white">01</div>
                    <i class="w-7 h-7 bg-white dark:bg-gray-600 flex rounded-full items-center justify-center ri-subtract-line"></i>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3 dark:bg-gray-700">
                <h4 class="text-base md:text-lg dark:text-gray-300">Net Total</h4>
                <h2 class="text-base md:text-lg dark:text-gray-100">₹ <%= product.price %></h2>
            </div>
        </div>
        <div class="w-full md:w-[70%] dark:bg-gray-900 dark:text-gray-100">
            <h3 class="text-lg md:text-xl dark:text-gray-200">Price Breakdown</h3>
            <div class="px-5 md:px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3 dark:text-gray-300">Total MRP</h4>
                    <h4>₹ 1920</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3 dark:text-gray-300">Discount on MRP</h4>
                    <h4>₹ 0</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3 dark:text-gray-300">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3 dark:text-gray-300">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black dark:bg-gray-600 mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-lg md:text-xl dark:text-gray-200">Total Amount</h3>
                <h3 class="font-semibold text-lg md:text-xl text-green-600">₹ 1940</h3>
            </div>
            <form action=""></form>
        </div>
    </div>
<% }) %>
<%- include('./partials/footer') %>
