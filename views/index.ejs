<%- include('./partials/header') %>

<% if(error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 dark:bg-red-700">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
<% } %>
<div class="w-full h-screen flex flex-col md:flex-row px-5 md:px-20 dark:bg-gray-900">
    <div class="w-full md:w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-5 md:px-32">
            <h3 class="text-3xl md:text-4xl text-black dark:text-white text-center md:text-left">
                Welcome to <span class="text-blue-400 font-semibold">My Shop</span>
            </h3>
            <h4 class="text-xl md:text-2xl mb-5 text-black dark:text-white text-center md:text-left">
                Create your account
            </h4>
            <form autocomplete="off" action="/user/register" method="post">
                <input class="bg-zinc-100 dark:bg-gray-800 text-black dark:text-white block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 dark:border-gray-700"
                       type="text" placeholder="Full Name" name="fullname">
                <input class="bg-zinc-100 dark:bg-gray-800 text-black dark:text-white block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 dark:border-gray-700"
                       type="email" placeholder="Email" name="email">
                <input class="bg-zinc-100 dark:bg-gray-800 text-black dark:text-white block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 dark:border-gray-700"
                       type="password" placeholder="Password" name="password">
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 dark:bg-blue-700 text-white w-full md:w-auto"
                       type="submit" value="Create My Account">
            </form>
        </div>
    </div>
    <div class="w-full md:w-1/2 flex items-center justify-center h-screen mt-5 md:mt-0">
        <div class="w-full px-5 md:px-32">
            <h4 class="text-xl md:text-2xl capitalize mb-5 text-black dark:text-white text-center md:text-left">
                Login your account
            </h4>
            <form autocomplete="off" action="/user/login" method="post">
                <input class="block bg-zinc-100 dark:bg-gray-800 text-black dark:text-white w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 dark:border-gray-700"
                       type="email" placeholder="Email" name="email">
                <input class="block bg-zinc-100 dark:bg-gray-800 text-black dark:text-white w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 dark:border-gray-700"
                       type="password" placeholder="Password" name="password">
                <input class="px-5 block rounded-full py-3 mt-2 bg-blue-500 dark:bg-blue-700 text-white w-full md:w-auto"
                       type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.tailwindcss.com"></script>
<%- include('./partials/footer') %>
