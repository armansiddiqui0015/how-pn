<%- include('./partials/header') %>
<% if (success && success.length > 0) { %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-red-500 dark:bg-red-700">
        <span class="inline-block text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full h-auto md:h-screen flex flex-col md:flex-row items-start px-5 sm:px-10 md:px-20 py-10 sm:py-15 md:py-20 dark:bg-gray-900 dark:text-gray-100">
    <!-- Sidebar -->
    <div class="w-full md:w-[25%] flex flex-col items-start mb-10 md:mb-0">
        <div class="flex items-center gap-2">
            <h3>Sort by</h3>
            <form action="/shop">
                <select class="border-[1px] px-2 py-1 dark:bg-gray-800 dark:text-gray-100" name="sortby" id="">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="flex flex-col mt-10 sm:mt-15 md:mt-20">
            <a class="block w-fit mb-2 dark:hover:text-gray-400" href="">New Collection</a>
            <a class="block w-fit mb-2 dark:hover:text-gray-400" href="">All Products</a>
            <a class="block w-fit mb-2 dark:hover:text-gray-400" href="">Discounted Products</a>
        </div>
        <div class="mt-10 sm:mt-15 md:mt-32">
            <a class="block w-fit mb-2 dark:hover:text-gray-400" href="">Filter by :</a>
            <a class="block w-fit mb-2 dark:hover:text-gray-400" href="">Availability</a>
            <a class="block w-fit mb-2 dark:hover:text-gray-400" href="">Discount</a>
        </div>
    </div>

    <!-- Products Section -->
    <div class="w-full md:w-[75%] flex flex-col gap-5">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
            <% products.forEach((product) => {%>
            <div style="border-radius: 20px; margin-top: 50px;" class="w-full">
                <div style="background-color: #333; border-radius: 20px;" class="w-full h-full flex items-center justify-center">
                    <img style="border-radius: 20px;" class="h-[12rem]" src="data:image/png;base64,<%=product.image.toString('base64')%>" alt="">
                </div>
                <div style="border-radius: 20px; background-color: rgb(19, 19, 19); color: white;" class="flex justify-between items-center px-4 py-4 text-xl md:text-2xl">
                    <div style="display: flex;">
                        <h3><%= product.name %></h3>
                        <h4 style="margin-left: 20px;">$<%= product.price %></h4>
                    </div>
                    <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white dark:bg-gray-600" href="/addtocart/<%= product.id %>">
                        <i class="ri-add-line dark:text-gray-100"></i>
                    </a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
